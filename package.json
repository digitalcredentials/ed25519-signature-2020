{
  "name": "@digitalcredentials/ed25519-signature-2020",
  "version": "3.0.2",
  "description": "Ed25519Signature2020 Linked Data Integrity suite for Verifiable Credentials, DIDs, etc.",
  "homepage": "https://github.com/digitalcredentials/ed25519-signature-2020",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalcredentials/ed25519-signature-2020"
  },
  "license": "BSD-3-Clause",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clear && tsc -d && tsc -p tsconfig.esm.json",
    "clear": "rimraf dist/*",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare2": "npm run build",
    "prettier": "prettier src --write",
    "rebuild": "npm run clear && npm run build",
    "test": "npm run lint && npm run test-node",
    "test-karma": "karma start karma.conf.js",
    "test-node": "cross-env NODE_ENV=test TS_NODE_PROJECT=tsconfig.spec.json TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/*.ts'"
  },
  "dependencies": {
    "@digitalcredentials/ed25519-verification-key-2020": "^4.0.0",
    "@digitalcredentials/linked-data-integrity": "^0.2.0",
    "base-x": "^4.0.0",
    "ed25519-signature-2018-context": "^1.1.0",
    "ed25519-signature-2020-context": "^1.0.1"
  },
  "devDependencies": {
    "@digitalbazaar/ed25519-verification-key-2018": "^3.1.1",
    "@digitalcredentials/security-document-loader": "^2.0.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.0",
    "karma": "^6.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-typescript": "^5.5.3",
    "mocha": "^10.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.ts"
  },
  "keywords": [
    "linked data integrity",
    "vc",
    "jsonld",
    "signatures"
  ]
}
